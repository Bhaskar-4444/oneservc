    <script type="module">
        // Import Firebase modules for initial setup
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, createUserWithEmailAndPassword, signInWithEmailAndPassword, signOut, onAuthStateChanged, updateProfile } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";
        
        // Firebase Configuration (NOTE: I have changed your key to a placeholder for security)
        const firebaseConfig = {
            apiKey: "AIzaSyDbCpfja4Ly7kjNNNqy1L7i81CeAFtCDzU_PLACEHOLDER",
            authDomain: "oneserviice-d0270.firebaseapp.com",
            projectId: "oneserviice-d0270",
            storageBucket: "oneserviice-d0270.firebasestorage.app",
            messagingSenderId: "591308815657",
            appId: "1:591308815657:web:aacb2188b2b94c92d24b38",
            measurementId: "G-K3KKG8R8KN"
        };

        window.firebaseApp = initializeApp(firebaseConfig);
        window.db = getFirestore(window.firebaseApp);
        window.auth = getAuth(window.firebaseApp);
        
        // Expose necessary Firebase auth functions to the global window object for script.js
        window.signInWithEmailAndPassword = signInWithEmailAndPassword;
        window.createUserWithEmailAndPassword = createUserWithEmailAndPassword;
        window.updateProfile = updateProfile;
        window.signOut = signOut;
        window.signInAnonymously = signInAnonymously;

        // The auth state listener logic is kept here as it relies on imported 'onAuthStateChanged'
        window.addEventListener('load', () => {
             // onAuthStateChanged needs to be defined after script.js is loaded and appState/navigateTo are available
             onAuthStateChanged(window.auth, (user) => {
                if (user) {
                    // Check if appState is defined (it is defined in script.js)
                    if (typeof appState !== 'undefined') {
                        appState.isLoggedIn = true;
                        appState.user = {
                            uid: user.uid,
                            name: user.displayName || user.email.split('@')[0],
                            email: user.email,
                            role: 'customer'
                        };
                        console.log("User signed in:", appState.user);
                        if (appState.currentPage === 'login' || appState.currentPage === 'signup') {
                            navigateTo('dashboard');
                        }
                    }
                } else {
                    if (typeof appState !== 'undefined') {
                        appState.isLoggedIn = false;
                        appState.user = null;
                        console.log("User signed out");
                        if (appState.currentPage === 'dashboard') {
                            navigateTo('home');
                        }
                    }
                }
            });
        });
    </script>
    
